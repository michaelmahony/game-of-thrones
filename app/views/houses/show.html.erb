<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h2>House <%= @house.name %></h2>
<p>
  <%= @house.motto %>
</p>

<img class="profile-image" src="<%= @house.banner_url %>" alt="">

<h3>Members:</h3>

<table>
    <tr>
        <th></th><th></th>
    </tr>
    <% @house.persons.each() do |person| %>
    <tr>
        <td><a href="persons/<%= person.id %>"><%=	person.first_name %> <%=	person.last_name %></a></td>
        <td></td>

    </tr>
    <%	 end %>
</table>

<%= link_to "Edit This House", edit_house_path(@house) %>